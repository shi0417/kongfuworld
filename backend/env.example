# AI 翻译配置（LangChain 流水线）
# 每分钟请求限制（RPM）
KFW_AI_RPM_LIMIT=3
# 最大并发数（先保持串行，后面可以调大）
KFW_AI_MAX_CONCURRENT=1
# 主模型（用于翻译）
KFW_AI_PRIMARY_MODEL=gpt-4o-mini
# 备用模型（预留，用于将来切换其他模型）
KFW_AI_SECONDARY_MODEL=gpt-4o-mini
# 单章最大字符数（超过则自动切分 chunk）
KFW_AI_MAX_CHARS_PER_CHAPTER=12000

# OpenAI 配置（AI 翻译使用）
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
